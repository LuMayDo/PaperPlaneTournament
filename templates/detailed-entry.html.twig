<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}PPT - Entry #{{ tournamentEntry.id }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href={{ asset('css/main.css') }} />
    {% endblock %}
</head>
<body>
{% block body %}
    <header>
        <h1>
            <a href="http://127.0.0.1:8000/home">Paper Plane Tournament</a>
        </h1>
    </header>

    <div class="content">
        <table>
            <tr>
                <th>participant name</th>
                <th>travel distance</th>
                <th>plane model</th>
                <th>flight duration</th>
                <th>date</th>
            </tr>

            <tr>
                <td>{{ tournamentEntry.participant }}</td>
                <td>{{ tournamentEntry.traveldistance }}</td>
                <td>{{ tournamentEntry.planemodel }}</td>
                <td>{{ tournamentEntry.flightduration }}</td>
                <td>{{ tournamentEntry.date|date("d.m.Y") }}</td>
            </tr>

        </table>

        <a href="{{ path('tournament_result') }}">
            <button type="button">Back</button>
        </a>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>