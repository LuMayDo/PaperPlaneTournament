<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PPT - Result #1{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href={{ asset('css/main.css') }} />
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <header>
                <h1>
                    <a href="http://127.0.0.1:8000/home">Paper Plane Tournament</a>
                </h1>
            </header>

            <div class="content">
                <h1>
                    Tournament Entries
                </h1>

                <table>
                    <tr>
                        <th>participant name</th>
                        <th>travel distance</th>
                        <th>plane model</th>
                        <th>flight duration</th>
                        <th>date</th>
                        <th>actions</th>
                    </tr>

                    {% for item in tournamentEntries %}
                        <tr>
                            <td>{{ item.participant }}</td>
                            <td>{{ item.traveldistance }}</td>
                            <td>{{ item.planemodel }}</td>
                            <td>{{ item.flightduration }}</td>
                            <td>{{ item.date|date("d.m.Y") }}</td>
                            <td><a href="{{ path('show_tournamententry',{id: item.id}) }}">Info</a></td>
                        </tr>
                    {%  endfor %}
                </table>
            </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
